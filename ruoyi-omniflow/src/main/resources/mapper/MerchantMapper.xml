<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.omniflow.mapper.MerchantMapper">

    <resultMap type="com.ruoyi.omniflow.domain.Merchant" id="MerchantResult">
        <result property="id"          column="id"          />
        <result property="name"         column="name"         />
        <result property="contactPhone" column="contact_phone" />
        <result property="address"      column="address"      />
        <result property="platformIds"  column="platform_ids"  />
        <result property="status"       column="status"       />
        <result property="createBy"     column="create_by"    />
        <result property="createTime"    column="create_time"   />
        <result property="updateBy"     column="update_by"    />
        <result property="updateTime"    column="update_time"   />
        <result property="deleted"      column="deleted"      />
    </resultMap>

    <!-- 逻辑删除过滤条件 -->
    <sql id="deleteCondition">
        and deleted = 0
    </sql>

    <sql id="selectMerchantVo">
        select id, name, contact_phone, address, platform_ids, status, create_by, create_time, update_by, update_time, deleted
        from omni_merchant
    </sql>

    <select id="selectMerchantList" parameterType="com.ruoyi.omniflow.domain.Merchant" resultMap="MerchantResult">
        <include refid="selectMerchantVo"/>
        <where>
            <include refid="deleteCondition"/>
            <if test="name != null and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="contactPhone != null and contactPhone != ''"> and contact_phone like concat('%', #{contactPhone}, '%')</if>
            <if test="status != null and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <select id="selectMerchantById" parameterType="Long" resultMap="MerchantResult">
        <include refid="selectMerchantVo"/>
        where id = #{id}
        <include refid="deleteCondition"/>
    </select>

    <insert id="insertMerchant" parameterType="com.ruoyi.omniflow.domain.Merchant" useGeneratedKeys="true" keyProperty="id">
        insert into omni_merchant
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">name,</if>
            <if test="contactPhone != null and contactPhone != ''">contact_phone,</if>
            <if test="address != null and address != ''">address,</if>
            <if test="platformIds != null and platformIds != ''">platform_ids,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createBy != null and createBy != ''">create_by,</if>
            <if test="updateBy != null and updateBy != ''">update_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            deleted
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null and name != ''">#{name},</if>
            <if test="contactPhone != null and contactPhone != ''">#{contactPhone},</if>
            <if test="address != null and address != ''">#{address},</if>
            <if test="platformIds != null and platformIds != ''">#{platformIds},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createBy != null and createBy != ''">#{createBy},</if>
            <if test="updateBy != null and updateBy != ''">#{updateBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
            0
        </trim>
    </insert>

    <update id="updateMerchant" parameterType="com.ruoyi.omniflow.domain.Merchant">
        update omni_merchant
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null and name != ''">name = #{name},</if>
            <if test="contactPhone != null and contactPhone != ''">contact_phone = #{contactPhone},</if>
            <if test="address != null and address != ''">address = #{address},</if>
            <if test="platformIds != null and platformIds != ''">platform_ids = #{platformIds},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createBy != null and createBy != ''">create_by = #{createBy},</if>
            <if test="updateBy != null and updateBy != ''">update_by = #{updateBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
        <include refid="deleteCondition"/>
    </update>

    <!-- 逻辑删除：更新deleted字段 -->
    <update id="deleteMerchantById" parameterType="Long">
        update omni_merchant set deleted = 1 where id = #{id} and deleted = 0
    </update>

    <update id="deleteMerchantByIds" parameterType="Long">
        update omni_merchant set deleted = 1 where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
        and deleted = 0
    </update>
</mapper>
